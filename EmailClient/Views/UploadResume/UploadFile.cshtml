<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload File</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('https://images.unsplash.com/photo-1506748686214-e9df14d4d9d0?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
            background-size: cover;
            background-position: center;
            margin: 0;
            padding: 0;
        }

        .upload-form-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.8);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            background-image: url('https://images.unsplash.com/photo-1506748686214-e9df14d4d9d0?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60');
            background-size: cover;
            background-position: center;
        }

        .upload-form-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .upload-form-container label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
            color: #333;
        }

        .upload-form-container input[type="file"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .upload-form-container button {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        .upload-form-container button:hover {
            background-color: #0056b3;
        }

        .message {
            text-align: center;
            margin-top: 10px;
            background-color: white;
            padding: 10px;
        }
    </style>
</head>

<body>
    <div class="upload-form-container">
        <h2>Upload File</h2>
        @model EmailClient.Models.Entities.UploadedFile

        @using (Html.BeginForm("UploadFile", "UploadResume", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <label for="file">Choose file to upload:</label>
            <input type="file" id="file" name="file" required>
            <button type="submit">Upload File</button>
        }
    </div>
    @if (ViewBag.msg != null)
    {
        <div class="message">@ViewBag.msg</div>
    }
</body>

</html>
